---
import SiteHead from "../components/SiteHead.astro";
import { LayoutProps } from "../model/layout";

export interface Props extends LayoutProps {}

const { title, current, displayHeader } = Astro.props;
---

<!DOCTYPE html>
<html class="no-js" lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" type="text/css" href="/css/global.css" />
		<link rel="stylesheet" type="text/css" href="/css/prism.css" />
		<meta name="generator" content={Astro.generator} />
		<script type="module">
			// This is a capable browser, let's improve the UI further!
			document.documentElement.classList.add("enhanced");
			document.documentElement.classList.remove("no-js");
		</script>
		<title>{title}</title>
	</head>
	<body>
		{
			displayHeader ? <SiteHead {current} /> : null
		}
		
		<main tabindex="-1">
			<slot />
		</main>
		
		<script src="/js/prism.js" is:inline></script>
	</body>
</html>
